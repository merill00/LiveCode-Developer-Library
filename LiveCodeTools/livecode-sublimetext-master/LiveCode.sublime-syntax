              scope: invalid.illegal.expected-token.livecode
              set: inside_repeat
        - match: '\S+'
          scope: invalid.illegal.expected-identifier.livecode
          set: inside_repeat
    - match: '(?i)^\s*(repeat\s+(?:while|until|for\s+each))\s+'
      captures:
        1: keyword.control.flow.livecode
      push:
        - match: '$'
          set: inside_repeat
        - include: expression
    - match: '(?i)^\s*(try)\b'
      captures:
        1: keyword.control.flow.livecode
